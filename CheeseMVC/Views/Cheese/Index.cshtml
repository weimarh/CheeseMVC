@{
    // Esto es para crear una pagina sin formato: Layout = null;
}

@model List<CheeseMVC.Models.Cheese>

<h1>@ViewBag.title</h1>

@if(Model.Count == 0)
{
    <h4>No Cheeses yet!</h4>
}

<a asp-controller="Cheese" asp-action="Add">Add Cheese</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Cheese cheese in Model)
        {
            <tr>
                <td>@cheese.Name</td>
                <td>@cheese.Description</td>
                <td>@cheese.Type</td>
            </tr>
        }
    </tbody>
</table>

